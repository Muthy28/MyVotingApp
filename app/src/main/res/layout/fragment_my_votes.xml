<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <!-- Top bar -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:text="MyVotingApp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#4B0082"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" />

        <ImageView
            android:id="@+id/ivNotification"
            android:src="@drawable/ic_notification"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:tint="#4B0082" />

    </LinearLayout>

    <!-- My Votes Heading -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Votes"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#4B0082"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"/>

    <!-- Search Bar -->
    <EditText
        android:id="@+id/etSearch"
        android:hint="Search"
        android:textSize="14sp"
        android:background="@drawable/bg_edittext2"
        android:padding="16dp"
        android:drawableLeft="@drawable/ic_search"
        android:drawablePadding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <!-- No Votes Message (Shown when user hasn't voted) -->
    <TextView
        android:id="@+id/tvNoVotes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="You haven't voted yet.\nGo to the Vote section to cast your vote."
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#4B0082"
        android:gravity="center"
        android:layout_gravity="center"
        android:visibility="gone"
        android:padding="16dp"/>

    <!-- Votes List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMyVotes"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>