<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Positions"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#4B0082"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Action Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3"
            android:layout_marginBottom="24dp">

            <!-- Add Position Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_weight="1"
                android:background="#4CAF50"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_margin="6dp"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Position"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="10dp" />

                <Button
                    android:id="@+id/btnAddPosition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add →"
                    android:textSize="14dp"
                    android:backgroundTint="#388E3C"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Update Position Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_weight="1"
                android:background="#FF9800"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_margin="6dp"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update Position"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="10dp" />

                <Button
                    android:id="@+id/btnUpdatePosition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update →"
                    android:textSize="12dp"
                    android:backgroundTint="#F57C00"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <!-- Delete Position Button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:layout_weight="1"
                android:background="#F44336"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_margin="6dp"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delete Position"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="10dp" />

                <Button
                    android:id="@+id/btnDeletePosition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delete →"
                    android:textSize="12dp"
                    android:backgroundTint="#D32F2F"
                    android:textColor="#FFFFFF" />
            </LinearLayout>
        </LinearLayout>

        <!-- Form Container (initially hidden) -->
        <LinearLayout
            android:id="@+id/formContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:background="@drawable/bg_rounded_card"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tvFormTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Position Form"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#4B0082"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Form content will be dynamically added here -->
            <TextView
                android:id="@+id/tvFormHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select an action to manage positions"
                android:textSize="16sp"
                android:textColor="#666666"
                android:gravity="center"
                android:layout_marginTop="16dp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>