<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#ECEFF1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- CRUD Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btnAddPosition"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Add Position"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/btnUpdatePosition"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Update Position"
                android:layout_marginStart="8dp"
                android:backgroundTint="#2196F3"
                android:textColor="#FFF" />

            <Button
                android:id="@+id/btnDeletePosition"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Delete Position"
                android:layout_marginStart="8dp"
                android:backgroundTint="#F44336"
                android:textColor="#FFF" />
        </LinearLayout>

        <!-- Add / Update Form -->
        <EditText
            android:id="@+id/edtPositionName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter position name"
            android:padding="8dp"
            android:background="@android:drawable/edit_text"
            android:layout_marginBottom="12dp" />

        <!-- Position List -->
        <LinearLayout
            android:id="@+id/positionListLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>
</ScrollView>
